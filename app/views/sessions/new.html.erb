<h1>Log in </h1>
<%=form_tag do%>
<table>
	<tr>
		<td> <%=label_tag :username%> </td>
		<td> <%=text_field_tag :username%>
	</tr>
	
	<tr>
		<td> <%=label_tag :password%> </td>
		<td> <%=password_field_tag :password%>
	</tr>
	
	<tr>
		<td> <%=submit_tag "Log in"%> </td>
		
	</tr>
</table>
<br>
<h4>New User? <%=link_to"Sign up now!", new_user_path%></h4>
<%end%>